
{
	"compilerOptions": {
		"target": "esnext",
		"outDir": "./dist/",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@images/*": ["assets/images/*"],
      "@typings/*": ["typings/*"],
      "@graphql/*": ["graphql/*"],
      "@redux/*": ["redux-store/*"],
      "@utils/*": ["utils/*"],
      "@tests/*": ["__tests__/*"]
    },
		"lib": [
			"es2015",
			"dom.iterable",
			"es2016.array.include",
			"es2017.object",
			"dom"
		],
		"module": "es6",
		"removeComments": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}